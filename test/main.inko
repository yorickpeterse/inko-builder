import std.env
import std.test.(Filter, Tests)

import builder.test_html
import builder.test_xml

class async Main {
  fn async main {
    let tests = Tests.new

    test_html.tests(tests)
    test_xml.tests(tests)

    tests.filter = Filter.from_string(env.arguments.opt(0).unwrap_or(''))
    tests.run
  }
}
